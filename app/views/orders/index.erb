<div class="container">
  <div class="level">
    <div class="level-item">
      <form method="get">
        <div class="field has-addons">
          <div class="control">
            <input class="input" id="filter" type="text" name="filter" value="<%= @filter %>">
          </div>
          <div class="control">
            <input class="input button is-info" type="submit" value="Search">
          </div>
        </div>
      </form>
    </div>
    <div class="level-item">
      <%= erb :pager, locals: {current_page: @pagination.page, last_page: @pagination.count}%>
    </div>
  </div>
</div>
<table class="table">
  <thead>
    <th>Order Number</th>
    <th>Created</th>
    <th>Billing Address</th>
    <th>Shipping Address</th>
    <th>Items</th>
    <th>Influencer</th>
    <th>Tracking Service</th>
    <th>Tracking Number</th>
    <th>Tracking Created</th>
    <th>Emailed At</th>
  </thead>
  <tbody>
    <% @table.each do |line| %>
      <tr>
        <td><%= line.order_number %></td>
        <td><%= line.processed_at %></td>
        <td><%= line.formatted_billing_address %></td>
        <td><%= line.formatted_shipping_address %></td>
        <td><%= line.formatted_line_items %></td>
        <td><a href="/admin/influencers/<%= line.influencer_id %>"><%= line.influencer_name %></a></td>
        <td><%= line.carrier %></td>
        <td><%= line.tracking_number %></td>
        <td><%= line.tracking_created %></td>
        <td><%= line.email_sent_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
