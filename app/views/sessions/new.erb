<h3><strong>Log In</strong></h3>
<br />
<% if defined? errors %>
  <div class="notification is-danger error-upload" style="width:200px;">
    <% errors.each do |msg| %>
      <p class="errors"> <%= msg %> </p>
    <% end %>
  </div>
<% end %>

<form id="login-form" action="/sessions" method="post">
  <div class = "field">
    <input name="username" type="text" placeholder="Username"/>
  </div>
  <div class = "field">
    <input name="password" type="password" placeholder="Password"/>
  </div>
  <br />
  <input class="submit-button button is-light" type="submit" value="Log In" />
</form>
